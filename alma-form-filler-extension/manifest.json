{
  "manifest_version": 3,
  "name": "Alma Form Filler",
  "version": "1.1.0",
  "description": "Auto-fills immigration forms with extracted passport and G-28 data from Alma",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://mendrika-alma.github.io/*",
    "https://alma-takehome-zeta.vercel.app/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mendrika-alma.github.io/form-submission/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://alma-takehome-zeta.vercel.app/*",
        "http://localhost:3000/*"
      ],
      "js": ["detector.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
